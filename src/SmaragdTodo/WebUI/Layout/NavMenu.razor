<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
    <AuthorizeView>
        <NotAuthorized>
            <MudNavLink Href="/login">Login</MudNavLink>
        </NotAuthorized>
        <Authorized>
            <MudNavLink Href="@NavigationRoutes.Boards.Base">Boards</MudNavLink>
            <MudNavLink @onclick="LogoutAsync">Logout</MudNavLink>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>

@code {
    async Task LogoutAsync()
    {
        await LocalStorageService.DeleteItemAsync(Core.Constants.Token.Key);
        NavManager.NavigateTo("/", true);
    }
}
