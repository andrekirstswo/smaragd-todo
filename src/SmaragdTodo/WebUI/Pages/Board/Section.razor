@using Core.Models
@using Microsoft.AspNetCore.Components

<MudPaper Elevation="0"
Width="100%"
MinHeight="400px"
Class="pa-4 ma-4 d-flex flex-column mud-background-gray rounded-lg">
    <MudToolBar Gutters="false">
        <MudText Typo="Typo.subtitle1"><b>@Item.Name</b></MudText>
    </MudToolBar>
    <MudDropZone
    T="TaskItem"
    Identifier="@Item.BoardSectionId"
    Class="mud-height-full">
        <AddTask Item="Item"></AddTask>
    </MudDropZone>
</MudPaper>

@code {
    private bool _isNewTaskOpen = false;

    [Parameter]
    public BoardSection Item { get; set; } = default!;

    private void AddTaskItem(BoardSection boardSection)
    {
        ApiClient.CreateTaskAsync()
        _isNewTaskOpen = false;
        // refresh dropcontainer via Notification
    }
}
