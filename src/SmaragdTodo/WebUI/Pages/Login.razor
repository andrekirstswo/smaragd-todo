@page "/login"
@using Core

<MudButton
    Color="Color.Primary"
    Variant="Variant.Filled"
    StartIcon="@Icons.Custom.Brands.Google"
           @onclick="LoginAsync">Login with @AuthenticationProviders.Google
</MudButton>

@code
{
    async Task LoginAsync()
    {
        var url = await ApiClient.GetAuthenticationUrl();

        ArgumentException.ThrowIfNullOrEmpty(url);
        
        NavManager.NavigateTo(url);
    }
}
